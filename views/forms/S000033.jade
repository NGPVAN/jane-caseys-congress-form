extends layout

block content

  form(method='POST', action='/forms/submitFormData', role="form")
    .row
      input(type='text', id='first', name='first', class='form-control', placeholder='Enter First Name', required)
      input(type='text', id='email', name='email', class='form-control', placeholder='Email', required)
      input(type='text', id='streetaddress', name='streetaddress', class='form-control', placeholder='Address')
      input(type='submit', id='submit', name='submit', value='Submit', class='btn btn-default')
