extends layout

block content

  form(method='POST', action='/forms/submitFormData', role="form")
    .row
      br
      input(type='text' id='bioid' name='bioid' value='#{bioId}')
      br
      input(type='text', id='feedback_content', name='feedback_content', class='form-control', placeholder='Enter Message', required)
      input(type='text', id='feedback_first_name', name='feedback_first_name', class='form-control', placeholder='Enter First Name', required)
      input(type='text', id='feedback_last_name', name='feedback_last_name', class='form-control', placeholder='Enter Last Name', required)
      input(type='text', id='feedback_email', name='feedback_email', class='form-control', placeholder='Email', required)    
      input(type='text', id='feedback_mobile_number', name='feedback_mobile_number', class='form-control', placeholder='Mobile Phone', required)  
      input(type='text', id='feedback_submitted_address', name='feedback_submitted_address', class='form-control', placeholder='Full Address', required)
            
      br
      input(type='submit', id='submit-button', name='submit', value='Submit', class='btn btn-default')
