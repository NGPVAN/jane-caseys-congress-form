extends layout

block content

  form(method='POST', action='/forms/solveNewRecaptcha', role="form")
    .row
      noscript
      div(data-sitekey='#{newPublicKey}', class='g-recaptcha')

      br
      input(type='text' id='bioid' name='bioid' value='#{bioId}')

      input(type='text', id='firstname', name='firstname', class='form-control', placeholder='Enter First Name', required)
      input(type='text', id='lastname', name='lastname', class='form-control', placeholder='Enter Last Name', required)
      input(type='text', id='streetaddress1', name='streetaddress1', class='form-control', placeholder='Address 1', required)
      input(type='text', id='city', name='city', class='form-control', placeholder='City', required)
      input(type='text', id='address_zip_5', name='address_zip_5', class='form-control', placeholder='Zip', required)

      input(type='text', id='email', name='email', class='form-control', placeholder='Email', required)
      input(type='text', id='phone', name='phone', class='form-control', placeholder='Phone', required)

      br
      input(type='text', id='subject', name='subject', class='form-control', placeholder='Enter Subject', required)
      input(type='text', id='message', name='message', class='form-control', placeholder='Enter Message', required)

      h4 Prefix
      select(name="prefix", required)#prefix
        option(value='') Select One
        option Mr.
        option Mrs.
        option Ms.
        option Miss

      select(name="topic", required)#topic
        option  Abortion / Sanctity of Life
        option  Agriculture
        option  Arts
        option  Banking & Finance
        option  Border Security
        option  Budget
        option  Census
        option  Congressional / Judicial / Investigations
        option  "Crime & Law Enforcement"
        option  Defense / National Security
        option  Economic Development / Trade / Commerce
        option  Education
        option  Elections
        option  Energy
        option  Environment
        option  FDA
        option  Firearms
        option  Foreign Affairs
        option  Healthcare
        option  Homeland Security
        option  Housing
        option  Immigration
        option  Internet
        option  Iraq & Afghanistan
        option  Labor Issues
        option  Medicare / Medicaid
        option  Overcriminalization of Drugs
        option  Science & Technology
        option  Postal
        option  Retirement
        option  Small Business
        option  Social Issues
        option  Social Security
        option  Taxes
        option  Telecommunications
        option  Transportation
        option  Veterans Issues
      
      br
      input(type="hidden", name="recaptcharesponse", value="manual_challenge")
      input(type='submit', id='recaptchaSubmit', name='recaptchaSubmit', value='Submit CAPTCHA')
